<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".MainActivity">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="314dp"
            android:layout_height="483dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:gravity="center">
        <View
                android:layout_width="match_parent"
                android:layout_height="171dp" android:id="@+id/view3"/>
        <Button

                android:layout_width="262dp"
                android:layout_height="82dp"
                android:id="@+id/btnTeacher"
                android:text="Teacher"
                android:textColor="@color/colorToolbar"
                android:textStyle="bold"
                android:textSize="25sp"
                android:drawableLeft="@drawable/ic_local_library_24px"
                android:paddingLeft="20dp"
                android:background="@drawable/round_button"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginTop="104dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintHorizontal_bias="0.496"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="69dp" android:id="@+id/view2"/>
        <Button

                android:layout_width="262dp"
                android:layout_height="82dp"
                android:id="@+id/btnStudent"
                android:text="Student"
                android:textColor="@color/colorToolbar"
                android:textStyle="bold"
                android:textSize="25sp"
                android:drawableLeft="@drawable/ic_school_24px"
                android:paddingLeft="20dp"
                android:background="@drawable/round_button" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginBottom="332dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnTeacher"
                app:layout_constraintVertical_bias="1.0"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
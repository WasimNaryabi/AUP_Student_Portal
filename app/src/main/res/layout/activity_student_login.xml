<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".Student.StudentLogin.StudentLogin">
    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:weightSum="8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/student"
                android:id="@+id/imageView2"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="20dp"

        />
        <EditText

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:background="@drawable/transprent"
                android:ems="10"
                android:textColorHint="#e7e5e5"
                android:gravity="center"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:paddingLeft="20dp"
                android:id="@+id/editTextEmail"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:background="@drawable/transprent"
                android:ems="10"
                android:textColor="#fff"
                android:textColorHint="#e7e5e5"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:paddingLeft="20dp"
                android:id="@+id/editTextPassword"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        <Button
                android:text="Login"
                android:background="@drawable/round_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/btnLogin"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".Teacher.TeacherChangePassword">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

    <EditText
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Old Password"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textColorHint="#fff"
            android:background="@drawable/transprent"
            android:id="@+id/oldPassword" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintHorizontal_bias="0.508"/>
    <EditText
            android:layout_width="245dp"
            android:layout_height="36dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Conform Password"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textColorHint="#fff"
            android:background="@drawable/transprent"
            android:id="@+id/renterPassword" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/newPassword"/>
    <EditText
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="New Password"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:textColorHint="#fff"
            android:background="@drawable/transprent"
            android:id="@+id/newPassword" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/oldPassword"/>
    <Button
            android:text="Submit"
            android:textStyle="bold"
            android:layout_width="243dp"
            android:background="@drawable/round_button"
            android:layout_height="38dp"
            android:id="@+id/btnSubmit" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="152dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.508"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/renterPassword"
            app:layout_constraintVertical_bias="0.575"/>


</androidx.constraintlayout.widget.ConstraintLayout>